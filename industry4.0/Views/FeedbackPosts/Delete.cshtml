@model industry4._0.Models.FeedbackPost

@{
    ViewData["Title"] = "Delete";
}
@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("Admin"))
    {
        <div class="container-fluid p-1">
            <h1 style="text-align:center;">Delete</h1>

            <h3 style="text-align:center;">Are you sure you want to delete this?</h3>
            <div>
                <h4 style="text-align:center;">FeedbackPost</h4>
                <hr />
                <dl class="row" style="margin-left:40%;">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Username)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Username)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.HEading)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.HEading)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StarRating)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StarRating)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Feedback)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Feedback)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Agree)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Agree)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Disagree)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Disagree)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CompanyOrganisationName)
                    </dt>
                    <dd class="col-sm-10">
