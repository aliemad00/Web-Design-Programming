                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.canIncreaseAgree)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.canIncreaseDisagree)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.canIncreaseDisagree)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                    <a asp-controller="Home" asp-action="Companiesandorganizations">Back to page</a>
                </form>
            </div>
        </div>

    }
    else
    {
        <div style="margin:20%;">
            <h3 style="text-align:center">Access Denied!</h3>
        </div>
    }
}
@if (!User.Identity.IsAuthenticated)
{
    <div style="margin:20%;">
        <h3 style="text-align:center">Access Denied!</h3>
    </div>
}